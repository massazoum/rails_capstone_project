
<!DOCTYPE html>
<html>
<head>
  <title>Recipes</title>
</head>
<body >
<div class="public">
<h1 >Food List</h1>
</div>
<%= link_to 'New Food', new_food_path , class: "form-creatnew" %>
<table border="1" class="table">
 <tr>
    <th>Food</th>
    <th>Measurement unit</th>
    <th>Unit price</th>
    <th>Actions</th>
  </tr>
  <% @foods.each do |food| %>
  <tr>
    <td>  <%= link_to food.name, food_path(food) %></td>
    <td> <%=food.measurement %></td>
    <td> <%=food.price %></td>
    <td><div class="form-actions"><%= button_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure?' },class: "form-submitt"%></div></td>
  </tr>
  <% end %>
</table>





 