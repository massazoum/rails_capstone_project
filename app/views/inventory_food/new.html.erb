<h1>Add Food to Inventory</h1>
<%= form_with(model: [@inventory, @inventory_food], url: inventory_foods_path(@inventory), local: true) do |form| %>
  <%= form.label :food_id, "Food" %>
  <%= form.collection_select :food_id, Food.all, :id, :name %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity %>

  <%= form.submit "Add Food" %>
<% end %>
