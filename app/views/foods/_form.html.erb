<!-- app/views/foods/_form.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Recipe Form</title>
  <style>
   .form-container {
  max-width: 400px;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
}

.form-header {
  text-align: center;
  font-size: 24px;
  color: #333;
  margin-bottom: 20px;
}

.form-field {
  margin-bottom: 15px;
}

.form-label {
  display: block;
  font-size: 16px;
  margin-bottom: 5px;
  color: #333;
}

.form-input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
}

.form-actions {
  text-align: center;
  margin-top: 20px;
}

.form-submit {
  background-color: #008cba;
  color: #fff;
  padding: 10px 20px;
  font-size: 18px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.form-submit:hover {
  background-color: #006799;
}

/* Error Messages */
.form-errors {
  color: #c00;
  font-size: 14px;
  margin-top: 10px;
}

.form-links {
  text-align: center;
  margin-top: 10px;
}

.form-links a {
  color: #666;
  text-decoration: none;
  margin: 0 10px;
}

.form-links a:hover {
  color: #333;
}

  </style>
</head>
<body>
  <div class="form-container">
<%= form_with(model: food, local: true) do |form| %>
  <div class="form-field">
  <%= form.label :name ,  class: "form-label"%>
  <%= form.text_field :name , class: "form-input" %>
</div>
  <div class="form-field">
  <%= form.label :measurement , class: "form-label" %>
  <%= form.text_field :measurement ,class: "form-input" %>
</div>
  <div class="form-field">
  <%= form.label :price , class: "form-label" %>
  <%= form.number_field :price ,class: "form-input" %>
</div>
  <div class="actions">
    <%= form.submit 'Create Food' ,class: "form-submit"  %>
  </div>
<% end %>
  </div>
</body>
</html>
